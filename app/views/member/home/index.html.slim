                - else
                    .sorteio-box
                        h2 = lottery.event
                        .icon-box
                            = icon('fas', 'user')
                            p = lottery.date_event.strftime("%d/%m/%Y")
                        div 
                            = link_to 'Participar', member_new_ticket_path(id: lottery.id)
            - else
                .sorteio-box
                    h2 = lottery.event
                    .icon-box
                        = icon('fas', 'user')
                        p = lottery.date_event.strftime("%d/%m/%Y")
                    div 
